<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roland.myapplication.ListOfResistances">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dip"
        android:layout_centerInParent="true"
        android:alpha="0.3"
        android:background="@drawable/image7"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/main_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter a resistance's characteristics :"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nomber_rings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_text_view"
        android:layout_marginTop="110dp"
        android:text="Number of rings :"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp" />

    <TextView
        android:id="@+id/colors_rings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomber_rings_text"
        android:layout_marginTop="60dp"
        android:text="Select color of any ring :"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinner2"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/spinner2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Spinner
        android:id="@+id/spinner7"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/spinner2"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/resultat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner5"
        android:layout_marginTop="60dp"
        android:text="The value of the resistance is : "
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/resultat_text"
        android:layout_marginTop="40dp"
        android:background="@color/Gray"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/unity"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/spinner1"
        android:layout_alignTop="@+id/total"
        android:background="@color/Gray"
        android:text=" Ohms"
        android:textColor="@color/White"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/signe"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/resultat_text"
        android:layout_alignTop="@+id/tolerance"
        android:background="@color/Gray"
        android:text="  +/- "
        android:textColor="@color/White"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tolerance"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/unity"
        android:layout_toStartOf="@+id/spinner1"
        android:background="@color/Gray"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/next_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        android:background="@color/White"
        android:textAlignment="center"
        android:textColor="@color/Red"
        android:textSize="20sp" />

    <Button
        android:id="@+id/next_value"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_button"
        android:onClick="nextResValue"
        android:text="NEXT"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/home"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/my_button"
        android:onClick="callHome"
        android:text="HOME"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
