<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@color/White"
    tools:context="com.example.roland.myapplication.AddAResistance"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_centerInParent="true"
        android:background="@drawable/image5"
        android:orientation="vertical"
        android:alpha="0.3"
        >
    </LinearLayout>

    <TextView
        android:id="@+id/main_text_view"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:text="Enter a resistance's characteristics : "
        />

    <TextView
        android:id="@+id/nomber_rings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_text_view"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:text="Number of rings : "
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/colors_rings_text"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/colors_rings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomber_rings_text"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:text="Select color of any ring :"
        />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        />
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="90dp"
        />
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="180dp"
        />
    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="280dp"
        />
    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="380dp"
        />
    <Spinner
        android:id="@+id/spinner7"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/resultat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner5"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:text="The value of the resistance is : "
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:id="@+id/total"
        android:background="@color/Gray"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:layout_above="@+id/home"
        android:layout_alignEnd="@+id/spinner3"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:id="@+id/unity"
        android:background="@color/Gray"
        android:textSize="25sp"
        android:text=" Ohms"
        android:textColor="@color/White"
        android:layout_alignTop="@+id/tolerance"
        android:layout_toEndOf="@+id/tolerance"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:id="@+id/signe"
        android:background="@color/Gray"
        android:textSize="25sp"
        android:text="  +/-  "
        android:textColor="@color/White"
        android:layout_alignTop="@+id/total"
        android:layout_toEndOf="@+id/total"
        />

    <TextView
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:id="@+id/tolerance"
        android:background="@color/Gray"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:layout_alignTop="@+id/signe"
        android:layout_toEndOf="@+id/signe"
        />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textStyle="bold"
        android:onClick="callHome"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/spinner6"
        android:background="@drawable/my_button"
        />



</RelativeLayout>
