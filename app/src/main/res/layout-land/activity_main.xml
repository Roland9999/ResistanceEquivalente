<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.roland.myapplication.MainActivity"
    >

    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/main_text_view"
        android:layout_alignEnd="@+id/res_val" />

    <TextView
        android:id="@+id/main_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Evaluate the value of a :" />

    <Button
        android:id="@+id/res_val"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Violet"
        android:text="RESISTANCE"
        android:textColor="@color/White"
        android:onClick="callAddAResistance"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/complex_circuit"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Violet"
        android:textColor="@color/White"
        android:text="COMPLEX CIRCUIT"
        android:onClick="callChooseComplexType"
        android:layout_alignTop="@+id/res_val"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout8"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@+id/main_text_view"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout9"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/linearLayout2"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="26dp" />

    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout10"
        android:layout_below="@+id/res_val"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout11"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout12"
        android:layout_above="@+id/linearLayout11"
        android:layout_alignStart="@+id/complex_circuit" />

    <LinearLayout
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/logo33"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_above="@+id/res_val"
        android:layout_alignStart="@+id/linearLayout9" />

</RelativeLayout>
