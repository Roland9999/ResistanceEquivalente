<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChooseComplexType">

    <TextView
        android:id="@+id/text_view_choose_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a type :" />

    <Button
        android:id="@+id/serial_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERIAL TYPE"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        android:onClick="callChooseNbr"/>

    <Button
        android:id="@+id/parallel_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARALLEL TYPE"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/serial_type_button"
        android:layout_centerHorizontal="true"
        android:onClick="callChooseNbr"/>

    <Button
        android:id="@+id/mixte_type_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIXTE TYPE"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/parallel_type_button"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="callHome"/>

</RelativeLayout>
