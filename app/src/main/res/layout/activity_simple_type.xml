<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roland.myapplication.SimpleType">

    <TextView
        android:id="@+id/text_view_simple_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Type :" />

    <TextView
        android:id="@+id/nomber_rings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_simple_type"
        android:layout_marginTop="68dp"
        android:text="Enter the number of rings of resistance :" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/colors_rings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomber_rings_text"
        android:layout_marginTop="30dp"
        android:text="Select color of any ring :" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"/>
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@id/spinner2"
        android:layout_marginStart="80dp"/>
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@id/spinner2"
        android:layout_marginStart="160dp"/>
    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/colors_rings_text"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@id/spinner2"
        android:layout_marginStart="250dp"/>



    <TextView
        android:id="@+id/resultat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner3"
        android:layout_marginTop="50dp"
        android:text="The value of your equivalente resistance is :"/>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="callHome"/>



</RelativeLayout>
